extends ../layout/index

block contenido 
	div.py-10
		h1.text-4xl.my-10.font-extrabold.text-center Bienes
			span.font-normal Raices
		h2.text-center.text-2xl.font-extrabold= pagina

		.mt-8.mx-auto.max-w-md
			.bg-white.py-8.px-4.shadow
				form.space-y-5
					div 
						label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu correo electrónico
						input#nombre.w-full.px-3.py-2.border.rounded-md.placeholder-gray-400(placeholder="Tu correo electrónico" type="email" name="email")
					div 
						label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu contraseña
						input#nombre.w-full.px-3.py-2.border.rounded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="password")

					div.flex.items-center.justify-between
						a.text-gray-500.text-xs(href="/auth/registro") No tienes cuenta ? Crea una
						a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi contraseña

					input(class="w-full bg-indigo-600 hover:bg-indigo-700 py-3 text-white text-bold cursor-pointer" type="submit" value="Iniciar sesión")
